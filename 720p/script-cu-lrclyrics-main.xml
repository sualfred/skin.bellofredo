<?xml version="1.0" encoding="UTF-8"?>
<window>
	<allowoverlay>no</allowoverlay>
	<zorder>0</zorder>
	<animation effect="fade" start="0" end="100" delay="300" time="200" reversible="false">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="200" reversible="false">WindowClose</animation>	
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(AddonSettings) + !Window.IsVisible(SelectDialog) + !Window.IsVisible(VisualisationPresetList) + !Window.IsVisible(1112) + !Window.IsActive(ShutdownMenu) + !Window.IsActive(favourites)</visible>
			<visible>Window.IsActive(Visualisation) + Player.HasAudio</visible>
			<visible>Control.IsVisible(110)</visible>
			<animation type="Visible" reversible="false">
				<effect type="fade" start="0" end="100" time="300" tween="sine" easing="in"  />
				<effect type="slide" start="0,-35" end="0,0" time="350" tween="cubic" easing="out" />
			</animation>
			<animation type="Hidden" reversible="false">
				<effect type="fade" start="100" end="0" time="300" tween="sine" easing="out" />
				<effect type="slide" start="0,0" end="0,-35" time="350" tween="sine" easing="out" />
			</animation>
			<animation effect="slide" start="0,0" end="0,150" time="350" condition="![Window.IsActive(MusicOSD) | Player.Paused | Player.Forwarding | Player.Rewinding | Player.ShowInfo]">Conditional</animation>
			<animation effect="zoom" start="100" end="85" center="auto" time="350" condition="[Window.IsActive(MusicOSD) | Player.Paused | Player.Forwarding | Player.Rewinding | Player.ShowInfo]">Conditional</animation>			
			<control type="image">
				<top>-170</top>
				<include>FullscreenDimensions</include>			
				<texture colordiffuse="ccblack" background="true">osd/white-shine.png</texture>
				<animation effect="fade" time="0" start="100" end="75" condition="true">Conditional</animation>
			</control>
			<control type="label">
				<description>No lyrics found</description>
				<top>50</top>
				<width>1280</width>
				<label>$ADDON[script.cu.lrclyrics 32001]</label>
				<font>FontSize_50</font>
				<textcolor>white</textcolor>
				<shadowcolor>99000000</shadowcolor>
				<align>center</align>
				<scroll>true</scroll>
				<scrollspeed>20</scrollspeed>
				<visible>!IntegerGreaterThan(Container(110).NumItems,0) | !Control.IsVisible(110)</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> -->
			<control type="list" id="110">
				<visible>Window.IsActive(Visualisation) + Player.HasAudio</visible>				
				<top>50</top>
				<left>250</left>
				<width>780</width>
				<height>330</height>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout width="780" height="54">
					<control type="label">
						<posx>10</posx>
						<posy>3</posy>
						<width>770</width>
						<height>42</height>
						<font>FontSize_40</font>
						<aligny>center</aligny>
						<align>center</align>
						<textcolor>77white</textcolor>
						<shadowcolor>99000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="780"  height="54">
					<control type="label">
						<posx>10</posx>
						<posy>3</posy>
						<width>770</width>
						<height>42</height>
						<font>FontSize_40B</font>
						<aligny>center</aligny>
						<align>center</align>
						<textcolor>77white</textcolor>
						<shadowcolor>99000000</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<posx>10</posx>
						<posy>3</posy>
						<width>770</width>
						<height>42</height>
						<font>FontSize_40B</font>
						<aligny>center</aligny>
						<align>center</align>
						<textcolor>selected</textcolor>
						<shadowcolor>99000000</shadowcolor>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
			</control>
			<!-- ** Required ** Do not change <id> or <type> -->
			<control type="spincontrol" id="111">				
				<visible>false</visible>
			</control>		
			<control type="list" id="120">
				<visible>false</visible>
			</control>
			<control type="spincontrol" id="121">
				<visible>false</visible>
			</control>			
			<control type="label" id="200">
				<description>Scraper Label</description>				
				<label>-</label>
				<visible>false</visible>					
			</control>
		</control>
	</controls>
</window>